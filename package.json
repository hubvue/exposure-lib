{
  "name": "@exposure-lib/monorepo",
  "version": "2.0.3",
  "private": true,
  "description": "基于InterfaceObserver API，当绑定元素出现在视窗内的时候执行回调",
  "scripts": {
    "build": "node ./scripts/build.js",
    "build:all": "node ./scripts/build.js --all",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add ./CHANGELOG.md",
    "format": "eslint --fix . --ext .js,.ts,.cjs,.mjs",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "example:start": "pnpm run dev --filter example",
    "test:e2e": "jest --runInBand",
    "test": "run-p example:start test:e2e"
  },
  "publishConfig": {
    "directory": "packages/*"
  },
  "devDependencies": {
    "@commitlint/cli": "17.8.1",
    "@commitlint/config-conventional": "17.8.1",
    "@microsoft/api-extractor": "^7.19.4",
    "@rollup/plugin-replace": "4.0.0",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest": "28.1.6",
    "@types/jest-environment-puppeteer": "^5.0.2",
    "@types/node": "^17.0.21",
    "@types/puppeteer": "^5.4.6",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "bumpp": "8.2.1",
    "chalk": "5.0.1",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "4.2.1",
    "esmo": "0.16.3",
    "inquirer": "^8.2.0",
    "jest": "^28.1.0",
    "jest-puppeteer": "^6.1.0",
    "lint-staged": "^10.2.10",
    "minimist": "^1.2.5",
    "prettier": "^2.0.5",
    "puppeteer": "15.4.0",
    "rollup": "^2.16.1",
    "rollup-plugin-typescript2": "0.32.1",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "{packages, example}/**/*.{ts, cjs, mjs}": [
      "npm run format",
      "prettier --write",
      "git add ."
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
